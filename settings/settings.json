{
	"[toml]": {
		"editor.defaultFormatter": "tamasfe.even-better-toml"
	},
	"chat.agent.enabled": true,
	"coderabbit.autoReviewMode": "prompt",
	"diffEditor.experimental.showMoves": true,
	"diffEditor.hideUnchangedRegions.enabled": true,
	"diffEditor.ignoreTrimWhitespace": false,
	"editor.accessibilitySupport": "off",
	"editor.autoClosingDelete": "always",
	"editor.autoIndent": "advanced",
	"editor.codeActionsOnSave": [
		"source.addMissingImports.ts",
		"source.sortImports.ts",
		"source.fixAll.ts",
		"source.fixAll.eslint",
		"source.fixAll.stylelint"
	],
	"editor.cursorSurroundingLines": 7,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.find.cursorMoveOnType": false,
	"editor.find.seedSearchStringFromSelection": "selection",
	"editor.fontFamily": "'FiraCode Nerd Font', Menlo, Monaco, 'Courier New', monospace",
	"editor.fontLigatures": true,
	"editor.formatOnSave": true,
	"editor.guides.bracketPairs": true,
	"editor.inlayHints.enabled": "offUnlessPressed",
	"editor.inlineSuggest.showToolbar": "always",
	"editor.linkedEditing": true,
	"editor.maxTokenizationLineLength": 1000,
	"editor.minimap.showSlider": "always",
	"editor.occurrencesHighlight": "multiFile",
	"editor.parameterHints.cycle": false,
	"editor.parameterHints.enabled": false,
	"editor.renderWhitespace": "all",
	"editor.stickyScroll.enabled": true,
	"editor.suggest.preview": true,
	"editor.suggestSelection": "recentlyUsed",
	"editor.tabSize": 2,
	"emmet.triggerExpansionOnTab": true,
	"explorer.confirmUndo": "verbose",
	"explorer.incrementalNaming": "disabled",
	"files.eol": "\n",
	"git.autofetch": "all",
	"git.closeDiffOnOperation": true,
	"git.diagnosticsCommitHook.enabled": true,
	"git.fetchOnPull": true,
	"git.mergeEditor": true,
	"git.pruneOnFetch": true,
	"github.copilot.chat.agent.thinkingTool": true,
	"github.copilot.chat.codeGeneration.instructions": [
		{
			"text": "Use English for internal reasoning."
		},
		{
			"text": "Use an energetic and playful tone."
		},
		{
			"text": "Ask for clarification when the context is unclear."
		},
		{
			"text": "Request approval before making non-essential improvements."
		},
		{
			"text": "Include optional code and explanations in conversation, not as comments."
		},
		{
			"text": "Follow established patterns and best practices for clean code."
		},
		{
			"text": "Provide complete, self-contained code samples."
		},
		{
			"text": "Identify root causes before drawing conclusions."
		},
		{
			"text": "Request assistance if test failures or analysis issues recur."
		}
	],
	"github.copilot.chat.commitMessageGeneration.instructions": [
		{
			"text": "Use Conventional Commits."
		}
	],
	"github.copilot.chat.completionContext.typescript.mode": "on",
	"github.copilot.chat.editor.temporalContext.enabled": true,
	"github.copilot.chat.edits.temporalContext.enabled": true,
	"github.copilot.chat.generateTests.codeLens": true,
	"github.copilot.chat.languageContext.typescript.enabled": true,
	"github.copilot.chat.localeOverride": "ja",
	"github.copilot.enable": {
		"*": true,
		"markdown": true,
		"plaintext": true,
		"scminput": true
	},
	"github.copilot.nextEditSuggestions.enabled": true,
	"github.copilot.nextEditSuggestions.fixes": true,
	"gitlens.views.stashes.files.layout": "list",
	"iconify.languageIds": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"vue",
		"svelte",
		"html",
		"pug",
		"json",
		"yaml",
		"mdx"
	],
	"inlineChat.enableV2": true,
	"inlineChat.hideOnRequest": true,
	"inlineChat.lineEmptyHint": true,
	"javascript.inlayHints.functionLikeReturnTypes.enabled": true,
	"javascript.inlayHints.parameterNames.enabled": "all",
	"javascript.inlayHints.parameterTypes.enabled": true,
	"javascript.inlayHints.propertyDeclarationTypes.enabled": true,
	"javascript.inlayHints.variableTypes.enabled": true,
	"keyboard.dispatch": "keyCode",
	"mcp": {
		"servers": {
			"context7": {
				"url": "https://mcp.context7.com/mcp"
			}
		}
	},
	"prettier.resolveGlobalModules": true,
	"prettier.singleQuote": true,
	"prettier.trailingComma": "all",
	"prettier.useTabs": true,
	"redhat.telemetry.enabled": true,
	"search.exclude": {
		"**/.astro": true,
		"**/.next": true,
		"**/.open-next": true,
		"**/.vercel": true,
		"**/.wrangler": true,
		"**/cloudflare-env.d.ts": true,
		"**/dist": true,
		"**/worker-configuration.d.ts": true
	},
	"search.showLineNumbers": true,
	"terminal.explorerKind": "external",
	"terminal.external.osxExec": "Warp.app",
	"terminal.sourceControlRepositoriesKind": "external",
	"totalTypeScript.hideAllTips": true,
	"totalTypeScript.hideBasicTips": true,
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"typescript.experimental.expandableHover": true,
	"typescript.inlayHints.functionLikeReturnTypes.enabled": true,
	"typescript.inlayHints.parameterNames.enabled": "all",
	"typescript.inlayHints.parameterTypes.enabled": true,
	"typescript.inlayHints.propertyDeclarationTypes.enabled": true,
	"typescript.inlayHints.variableTypes.enabled": true,
	"typescript.preferences.autoImportSpecifierExcludeRegexes": ["^console$"],
	"typescript.preferences.preferTypeOnlyAutoImports": true,
	"window.autoDetectColorScheme": true,
	"window.confirmBeforeClose": "keyboardOnly",
	"window.title": "${activeEditorLong}${separator}${activeEditorState}",
	"workbench.editor.alwaysShowEditorActions": true,
	"workbench.editorAssociations": {
		"*.svg": "default"
	},
	"workbench.preferredDarkColorTheme": "GitHub Dark Colorblind (Beta)",
	"workbench.preferredLightColorTheme": "GitHub Light Colorblind (Beta)",
	"workbench.startupEditor": "welcomePageInEmptyWorkbench",
	"workbench.tree.enableStickyScroll": true
}
