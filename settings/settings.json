{
	"[toml]": {
		"editor.defaultFormatter": "tamasfe.even-better-toml"
	},
	"cline.modelSettings.o3Mini.reasoningEffort": "high",
	"diffEditor.experimental.showMoves": true,
	"diffEditor.hideUnchangedRegions.enabled": true,
	"diffEditor.ignoreTrimWhitespace": false,
	"editor.accessibilitySupport": "off",
	"editor.autoClosingDelete": "always",
	"editor.autoIndent": "advanced",
	"editor.codeActionsOnSave": [
		"source.addMissingImports.ts",
		"source.sortImports.ts",
		"source.fixAll.ts",
		"source.fixAll.eslint",
		"source.fixAll.stylelint"
	],
	"editor.colorDecorators": false,
	"editor.cursorSurroundingLines": 7,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.fontFamily": "'FiraCode Nerd Font', Menlo, Monaco, 'Courier New', monospace",
	"editor.fontLigatures": true,
	"editor.formatOnSave": true,
	"editor.guides.bracketPairs": true,
	"editor.inlayHints.enabled": "offUnlessPressed",
	"editor.inlineSuggest.showToolbar": "always",
	"editor.linkedEditing": true,
	"editor.maxTokenizationLineLength": 1000,
	"editor.minimap.showSlider": "always",
	"editor.occurrencesHighlight": "multiFile",
	"editor.renderWhitespace": "all",
	"editor.stickyScroll.enabled": true,
	"editor.suggest.preview": true,
	"editor.suggestSelection": "recentlyUsed",
	"editor.tabSize": 2,
	"emmet.triggerExpansionOnTab": true,
	"explorer.confirmUndo": "verbose",
	"explorer.incrementalNaming": "disabled",
	"files.associations": {
		"*.njk": "html"
	},
	"files.eol": "\n",
	"git.autofetch": "all",
	"git.closeDiffOnOperation": true,
	"git.diagnosticsCommitHook.Enabled": true,
	"git.fetchOnPull": true,
	"git.mergeEditor": true,
	"git.pruneOnFetch": true,
	"github.copilot.chat.codeGeneration.instructions": [
		{
			"text": "Always perform your internal reasoning in English."
		},
		{
			"text": "Always communicate with me in Japanese unless otherwise specified."
		},
		{
			"text": "Always communicate with me in a friendly and energetic tone without compromising your intelligence."
		},
		{
			"text": "When the context is unclear, always ask me."
		},
		{
			"text": "When encountering a problem, always think carefully about the root cause before jumping to conclusions."
		},
		{
			"text": "Always focus on the current task."
		},
		{
			"text": "Always ask me before making changes that are relevant but not essential to the current task."
		},
		{
			"text": "When starting a task in agent mode, always run `git status` to review the current working tree."
		},
		{
			"text": "When there are many uncommitted changes that are irrelevant to the current task, always suggest starting a new session."
		},
		{
			"text": "Always check project files before suggesting structural or dependency changes."
		},
		{
			"text": "Always keep the codebase clean and organized, following well-known patterns and best practices."
		},
		{
			"text": "Always keep the codebase documentation up-to-date with changes."
		},
		{
			"text": "Always ensure the code is functionally complete and ready to run."
		},
		{
			"text": "When the same test failure or static analysis problem occurs consecutively at least twice, always review the situation and collaborate with me to find a solution."
		}
	],
	"github.copilot.chat.commitMessageGeneration.instructions": [
		{
			"text": "Use conventional commit message format."
		}
	],
	"github.copilot.chat.completionContext.typescript.mode": "on",
	"github.copilot.chat.editor.temporalContext.enabled": true,
	"github.copilot.chat.edits.temporalContext.enabled": true,
	"github.copilot.chat.generateTests.codeLens": true,
	"github.copilot.chat.languageContext.typescript.enabled": true,
	"github.copilot.chat.localeOverride": "ja",
	"github.copilot.chat.search.semanticTextResults": true,
	"github.copilot.editor.enableAutoCompletions": true,
	"github.copilot.enable": {
		"*": true,
		"markdown": true,
		"plaintext": true,
		"scminput": true
	},
	"github.copilot.nextEditSuggestions.enabled": true,
	"githubPullRequests.pullBranch": "never",
	"iconify.languageIds": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"vue",
		"svelte",
		"html",
		"pug",
		"json",
		"yaml",
		"mdx"
	],
	"inlineChat.lineEmptyHint": true,
	"javascript.inlayHints.functionLikeReturnTypes.enabled": true,
	"javascript.inlayHints.parameterNames.enabled": "all",
	"javascript.inlayHints.parameterTypes.enabled": true,
	"javascript.inlayHints.propertyDeclarationTypes.enabled": true,
	"javascript.inlayHints.variableTypes.enabled": true,
	"keyboard.dispatch": "keyCode",
	"prettier.resolveGlobalModules": true,
	"prettier.singleQuote": true,
	"prettier.useTabs": true,
	"redhat.telemetry.enabled": true,
	"search.exclude": {
		"**/.astro": true,
		"**/.next": true,
		"**/.vercel": true,
		"**/.wrangler": true,
		"**/dist": true
	},
	"search.searchOnType": false,
	"search.showLineNumbers": true,
	"terminal.explorerKind": "external",
	"terminal.external.osxExec": "Warp.app",
	"terminal.integrated.env.osx": {
		"CW_NEW_SESSION": "1"
	},
	"terminal.sourceControlRepositoriesKind": "external",
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"typescript.experimental.expandableHover": true,
	"typescript.inlayHints.functionLikeReturnTypes.enabled": true,
	"typescript.inlayHints.parameterNames.enabled": "all",
	"typescript.inlayHints.parameterTypes.enabled": true,
	"typescript.inlayHints.propertyDeclarationTypes.enabled": true,
	"typescript.inlayHints.variableTypes.enabled": true,
	"typescript.preferences.autoImportSpecifierExcludeRegexes": ["^console$"],
	"typescript.preferences.preferTypeOnlyAutoImports": true,
	"window.autoDetectColorScheme": true,
	"window.confirmBeforeClose": "keyboardOnly",
	"window.title": "${folderPath}${separator}${activeEditorState}",
	"workbench.editor.alwaysShowEditorActions": true,
	"workbench.editor.doubleClickTabToToggleEditorGroupSizes": "maximize",
	"workbench.editor.tabSizing": "fixed",
	"workbench.editorAssociations": {
		"*.svg": "default"
	},
	"workbench.preferredDarkColorTheme": "GitHub Dark Colorblind (Beta)",
	"workbench.preferredLightColorTheme": "GitHub Light Colorblind (Beta)",
	"workbench.settings.useWeightedKeySearch": true,
	"workbench.startupEditor": "welcomePageInEmptyWorkbench",
	"workbench.tree.enableStickyScroll": true
}
